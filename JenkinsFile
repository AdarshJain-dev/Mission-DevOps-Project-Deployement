pipeline {
    agent any
    
    tools {
        jdk 'jdk17'
        maven 'maven3'
    }
    
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'git-cred', url: 'https://github.com/AdarshJain-dev/Mission-DevOps-Project-Deployement.git'
            }
        }

        stage('Compile') {
            steps {
                sh "mvn compile"
            }
        }

        stage('Test') {
            steps {
                sh "mvn test"
            }
        }

        stage('Trivy Scan - Filesystem') {
            steps {
                sh "trivy fs . --format table -o trivy-fs-report.html || true"
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh '''$SCANNER_HOME/bin/sonar-scanner \
                        -Dsonar.projectKey=Mission \
                        -Dsonar.projectName=Mission \
                        -Dsonar.java.binaries=.'''
                }
            }
        }

        stage('Build Maven Package') {
            steps {
                sh "mvn package -DskipTests=true"
            }
        }

        stage('Deploy Artifacts to Nexus') {
            steps {
                withMaven(globalMavenSettingsConfig: 'maven-settings', jdk: 'jdk17', maven: 'maven3') {
                    sh "mvn deploy -DskipTests=true"
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-credentials') {
                        def app = docker.build("adarshjain428/mission:latest")
                        app.push()
                    }
                }
            }
        }

        stage('Trivy Scan - Docker Image') {
            steps {
                sh "trivy image adarshjain428/mission:latest --format table -o trivy-image-report.html || true"
            }
        }

        stage('Deploy & Verify on K8s') {
            steps {
                withKubeConfig(credentialsId: 'k8-token', clusterName: 'DS-EKS', namespace: 'webapps', serverUrl: 'https://0354A490118BCEB05FAEDDAC71ADC38A.gr7.ap-south-1.eks.amazonaws.com') {
                    sh """
                        kubectl apply -f ds.yml -n webapps
                        echo "Waiting for pods to start..."
                        sleep 60
                        kubectl get pods -n webapps
                        kubectl get svc -n webapps
                    """
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '*.html', fingerprint: true
        }
    }
}
